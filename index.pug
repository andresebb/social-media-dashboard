include globales.pug
<!DOCTYPE html>

html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Social Media
        link(rel="stylesheet", href="css/styles.css")
        link(href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet")
    body(id="body" class="")
        header(id="header" class="header")
            div.header__titulo
                h2 Social Media Dashboard
                p Total Followers: 23.004
            div.header__dark
                p Dark Mode
                input.checkbox(type="checkbox")
        .wrapper
            section.social
                +box("icon-facebook.svg", "@andresebb", "1987", "icon-up.svg", " fb--class otra-clase", " verde")
                +box("icon-twitter.svg", "@andresebb001", "1044", "icon-up.svg", " tw--class otra-clase1", " verde")
                +box("icon-instagram.svg", "@andresebb", "11k", "icon-up.svg", " ig--class otra-clase2", " verde")
                +box("icon-youtube.svg", "@aebb001", "8239", "icon-down.svg", " yt--class otra-clase3", " rojo")
                
            section.overview
                h2 Overview - Today
            .overview__container

                +boxOverview("Page Views", "icon-facebook.svg", "87", "icon-up.svg", "3%", " verde", " box__down1")
                +boxOverview("Likes", "icon-facebook.svg", "52", "icon-down.svg", "2%", " rojo", " box__down2")
                
                +boxOverview("Likes", "icon-instagram.svg", "5462", "icon-up.svg", "2257%", " verde", " box__down3")
                +boxOverview("Profile Views", "icon-instagram.svg", "52k", "icon-up.svg", "1375%", " verde", " box__down4")
                
            .overview__container
                +boxOverview("Retweets", "icon-twitter.svg", "107", "icon-up.svg", "303%", " verde", " box__down5")
                +boxOverview("Likes", "icon-twitter.svg", "507", "icon-up.svg", "553%", " verde", " box__down6")
                
                +boxOverview("Likes", "icon-youtube.svg", "107", "icon-down.svg", "19%", " rojo", " box__down7")
                +boxOverview("Total Views", "icon-youtube.svg", "1407", "icon-down.svg", "12%", " rojo", " box__down8")
            script(src="javascript/evento.js")
